<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8FFFFFF"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/titleGps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GPS"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tvEnabledGPS"
        android:layout_width="334dp"
        android:layout_height="wrap_content"
        android:background="	#ffffff"
        android:textColor="#020202"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tvStatusGPS"
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:background="	#ffffff"
        android:textColor="#020202"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tvLocationGPS"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:background="	#ffffff"
        android:textColor="#020202"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/titleNet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Network"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tvEnabledNet"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:background="	#ffffff"
        android:textColor="#020202"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tvStatusNet"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:background="	#ffffff"
        android:textColor="#020202"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tvLocationNet"
        android:layout_width="327dp"
        android:layout_height="wrap_content"
        android:background="	#ffffff"
        android:textColor="#020202"
        android:textSize="24sp" />

    <Button
        android:id="@+id/bt1GoToPoint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="Click"
        android:text="Button" />

    <Button
        android:id="@+id/bt2LocationSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:onClick="onClickLocationSettings"
        android:text="location_settings" />
</LinearLayout>